#include <stdio.h>

int main()
{
    int arr[100];
    int n, i;
    int evenSum = 0, oddSum = 0;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements:\n");
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    for(i = 0; i < n; i++)
    {
        if(i % 2 == 0)
            evenSum += arr[i];
        else
            oddSum += arr[i];
    }

    printf("Sum of even index elements = %d\n", evenSum);
    printf("Sum of odd index elements  = %d\n", oddSum);

    return 0;
}
