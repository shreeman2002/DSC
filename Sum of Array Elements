#include <stdio.h>

int main() {
    int arr[10];
    int n, i, sum = 0;

    // Read number of elements
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Read array elements
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Print array elements
    printf("Array elements are:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
        sum = sum + arr[i];   // Calculate sum
    }

    // Print sum
    printf("\nSum of array elements = %d", sum);

    return 0;
}
