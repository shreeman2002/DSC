#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

struct node* copyList(struct node *head) {
    struct node *newHead = NULL, *newTail = NULL;
    struct node *temp = head;

    // Case: Empty list
    if (head == NULL)
        return NULL;

    while (temp != NULL) {
        struct node *newNode =
            (struct node*)malloc(sizeof(struct node));

        newNode->data = temp->data;
        newNode->next = NULL;

        // First node of copied list
        if (newHead == NULL) {
            newHead = newNode;
            newTail = newNode;
        } else {
            newTail->next = newNode;
            newTail = newNode;
        }

        temp = temp->next;
    }

    return newHead;
}

// Display function
void display(struct node *head) {
    while (head != NULL) {
        printf("%d -> ", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

int main() {
    struct node *head1 = NULL, *head2 = NULL;

    // Original list: 10 -> 20 -> 30
    head1 = (struct node*)malloc(sizeof(struct node));
    head1->data = 10;
    head1->next = (struct node*)malloc(sizeof(struct node));
    head1->next->data = 20;
    head1->next->next = (struct node*)malloc(sizeof(struct node));
    head1->next->next->data = 30;
    head1->next->next->next = NULL;

    printf("Original List:\n");
    display(head1);

    head2 = copyList(head1);

    printf("Copied List:\n");
    display(head2);

    return 0;
}
