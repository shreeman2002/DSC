#include <stdio.h>
#include <stdlib.h>

// Definition of node
struct node {
    int data;
    struct node *next;
};

// Function to sort linked list
void sortList(struct node *head) {
    struct node *i, *j;
    int temp;

    if (head == NULL)
        return;

    for (i = head; i->next != NULL; i = i->next) {
        for (j = i->next; j != NULL; j = j->next) {
            if (i->data > j->data) {
                // Swap data
                temp = i->data;
                i->data = j->data;
                j->data = temp;
            }
        }
    }
}

// Function to display list
void display(struct node *head) {
    struct node *temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {
    struct node *head = NULL, *second, *third, *fourth;

    // Create unsorted list: 40 -> 10 -> 30 -> 20
    head = (struct node *)malloc(sizeof(struct node));
    second = (struct node *)malloc(sizeof(struct node));
    third = (struct node *)malloc(sizeof(struct node));
    fourth = (struct node *)malloc(sizeof(struct node));

    head->data = 40;
    head->next = second;

    second->data = 10;
    second->next = third;

    third->data = 30;
    third->next = fourth;

    fourth->data = 20;
    fourth->next = NULL;

    printf("Before sorting:\n");
    display(head);

    sortList(head);

    printf("After sorting (Ascending Order):\n");
    display(head);

    return 0;
}
